# Buildkite Agent Configuration
# Generated by Ansible - do not edit manually

# Agent token
token="{{ buildkite_agent_token }}"

# Agent name
name="{{ buildkite_agent_name }}"

# Number of agents to spawn
spawn={{ buildkite_agent_spawn }}

# Agent priority
priority={{ buildkite_agent_priority }}

# Agent tags
{% set tags = ["queue=" + buildkite_cluster_name, "slurm=true"] + buildkite_additional_tags %}
tags="{{ tags | join(',') }}"

# Include host metadata as tags
tags-from-host={{ buildkite_tags_from_host | lower }}

# Build path
build-path="{{ buildkite_build_path }}"

# Hooks path
hooks-path="{{ buildkite_hooks_path }}"

# Plugins path
plugins-path="{{ buildkite_plugins_path }}"

# Git configuration
git-clone-flags="-v"
git-clean-flags="-ffxdq"

# Security settings
no-pty=false
no-automatic-ssh-fingerprint-verification=false
no-command-eval=false
no-plugins=false

# Logging
debug=false
no-color=false
